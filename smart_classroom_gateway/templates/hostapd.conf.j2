#
# armbian hostapd configuration example
#
# nl80211 mode
#

ssid={{ wifi_ssid }}
interface=wlan0
hw_mode=g
channel={{ wifi_channel }}
#bridge=br0
driver=nl80211
#ht_capab=[HT40+][HT40-][SHORT-GI-40]
#ieee80211d=1
#ieee80211n=1
#require_ht=0

logger_syslog=1
logger_syslog_level=0
wmm_enabled=1
wpa=2
preamble=1

wpa_passphrase={{ wifi_password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
auth_algs=1
macaddr_acl=0

noscan=1

