[watcher:smart_classroom]
working_dir = /srv/smartclassroom_backend
cmd = /home/{{ smartclassroom_user }}/.virtualenvs/smartclassroom/bin/gunicorn
args = -b 127.0.0.1:8001 wsgi
uid = {{ smartclassroom_user }}
numprocesses = 1
autostart = true
stdout_stream.class = FileStream
stdout_stream.filename = /var/log/smartclassroom_backend/smartclassroom.stdout.log
stdout_stream.max_bytes = 10485760
stdout_stream.backup_count = 4
stderr_stream.class = FileStream
stdout_stream.filename = /var/log/smartclassroom_backend/smartclassroom.stderr.log
stderr_stream.max_bytes = 10485760
stderr_stream.backup_count = 4

[env:smart_classroom]
PATH = /home/{{ smartclassroom_user }}/.virtualenvs/smartclassroom/bin:$PATH
TERM=rxvt-256color
SHELL=/bin/bash
USER={{ smartclassroom_user }}
LANG=en_US.UTF-8
HOME=/home/{{ smartclassroom_user }}
PYTHONPATH=.:/home/{{ smartclassroom_user }}/.virtualenvs/smartclassroom/lib/python3.4/site-packages

[watcher:smart_classroom_mqtt]
working_dir = /srv/smartclassroom_backend
cmd = /home/{{ smartclassroom_user }}/.virtualenvs/smartclassroom/bin/python3
args = /srv/smartclassroom_backend/mqtt.py
uid = {{ smartclassroom_user }}
numprocesses = 1
autostart = true
stdout_stream.class = FileStream
stdout_stream.filename = /var/log/smartclassroom_backend/smartclassroom.stdout.log
stdout_stream.max_bytes = 10485760
stdout_stream.backup_count = 4
stderr_stream.class = FileStream
stdout_stream.filename = /var/log/smartclassroom_backend/smartclassroom.stderr.log
stderr_stream.max_bytes = 10485760
stderr_stream.backup_count = 4

[env:smart_classroom_mqtt]
