[watcher:taiga]
working_dir = "{{ taiga_base_url }}/taiga-back"
cmd = gunicorn
args = -w 3 -t 60 --pythonpath=. -b 127.0.0.1:8001 taiga.wsgi
uid = taiga
numprocesses = 1
autostart = true
send_hup = true
stdout_stream.class = FileStream
stdout_stream.filename = "{{ taiga_base_url }}/logs/gunicorn.stdout.log"
stdout_stream.max_bytes = 10485760
stdout_stream.backup_count = 4
stderr_stream.class = FileStream
stderr_stream.filename = "{{ taiga_base_url }}/gunicorn.stderr.log"
stderr_stream.max_bytes = 10485760
stderr_stream.backup_count = 4

[env:taiga]
PATH = "{{ taiga_base_url }}/.virtualenvs/taiga/bin:$PATH"
TERM=rxvt-256color
SHELL=/bin/bash
USER=taiga
LANG=en_US.UTF-8
HOME={{ taiga_base_url }}
PYTHONPATH="{{ taiga_base_url }}/.virtualenvs/taiga/lib/python3.5/site-packages"